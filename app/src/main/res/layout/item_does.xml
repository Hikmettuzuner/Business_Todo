<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userEmailTextViewCustomView"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Buy whiskas"
            android:textColor="#000C5D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/userEventTextViewCustomView"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Buy whiskas"
            android:textColor="#000C5D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/userRepresentNameTextViewCustomView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="sadf"
            android:textColor="#ADADAD"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/userRepresentNumberTextViewCustomView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ara"
            android:textColor="#ADADAD"
            android:textSize="10sp" />


        <View
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_height="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userDateTextViewCustomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tomorrow"
                android:textColor="#F63EA5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userEventPeopleTextViewCustomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tomorrow"
                android:textColor="#F63EA5"
                android:textSize="16sp" />


            <View
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_height="8dp"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>